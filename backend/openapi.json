  "components": {
    "schemas": {
      "BoardRequest": {
        "properties": {
          "board": {
            "items": {
              "items": {
                "type": "integer"
              },
              "type": "array"
            },
            "type": "array",
            "title": "Board"
          },
          "player": {
            "type": "integer",
            "title": "Player"
          },
          "difficulty": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Difficulty"
          }
        },
        "type": "object",
        "required": [
          "board",
          "player"
        ],
        "title": "BoardRequest"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "MoveResponse": {
        "properties": {
          "start": {
            "prefixItems": [
              {
                "type": "integer"
              },
              {
                "type": "integer"
              }
            ],
            "type": "array",
            "maxItems": 2,
            "minItems": 2,
            "title": "Start"
          },
          "end": {
            "prefixItems": [
              {
                "type": "integer"
              },
              {
                "type": "integer"
              }
            ],
            "type": "array",
            "maxItems": 2,
            "minItems": 2,
            "title": "End"
          }
        },
        "type": "object",
        "required": [
          "start",
          "end"
        ],
        "title": "MoveResponse"
      },
      "SaveGameRequest": {
        "properties": {
          "mode": {
            "type": "string",
            "title": "Mode"
          },
          "winner": {
            "type": "integer",
            "title": "Winner"
          },
          "moves": {
            "items": {},
            "type": "array",
            "title": "Moves"
          },
          "timestamp": {
            "type": "number",
            "title": "Timestamp"
          }
        },
        "type": "object",
        "required": [
          "mode",
          "winner",
          "moves"
        ],
        "title": "SaveGameRequest"
      },
      "TrainingStartRequest": {
        "properties": {
          "max_steps": {
            "type": "integer",
            "title": "Max Steps",
            "default": 200
          },
          "workers": {
            "type": "integer",
            "title": "Workers",
            "default": 4
          },
          "mode": {
            "type": "string",
            "title": "Mode",
            "default": "parallel"
          },
          "num_mcts_sims": {
            "type": "integer",
            "title": "Num Mcts Sims",
            "default": 25
          },
          "num_episodes": {
            "type": "integer",
            "title": "Num Episodes",
            "default": 10
          }
        },
        "type": "object",
        "title": "TrainingStartRequest"
      },
      "TrainingUpdate": {
        "properties": {
          "type": {
            "type": "string",
            "title": "Type"
          },
          "data": {
            "additionalProperties": true,
            "type": "object",
            "title": "Data"
          }
        },
        "type": "object",
        "required": [
          "type",
          "data"
